@model Entities.VM.MovieInfoVM
<h2>File(s) uploaded and processed successfully!</h2>

<p>@Model.MoviesCount records have been inserted into the Movie table. Here are the first 3 rows:</p>
<table>
    <thead>
        <tr>
            <th>Movie ID</th>
            <th>Title</th>
            <th>Release Date</th>
            <!-- Add additional columns here as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@movie.MovieID</td>
                <td>@movie.Title</td>
                <td>@movie.ReleaseDate.ToShortDateString()</td>
